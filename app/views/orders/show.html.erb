<div class="container mt-5 d-flex flex-column justify-content-center align-items-center">
  <h3> Your Order </h3>
  <div class="container">
    <div class="row py-3 d-flex flex-column justify-content-center align-items-center">
      <div class="col-8">
        <div class="card-product-order">
          <% if @order.lecture.photo.attached? %>
            <%= cl_image_tag(@order.lecture.photo.key) %>
          <% else %>
            <%= image_tag('10.jpg')%>
          <% end %>
          <div class="card-product-infos d-flex flex-column justify-content-center align-items-center my-2">
            <h4><strong>Congratulation ! </strong></h4>
            <h5><strong>You Can Watch Your Video </strong></h5>
            <h6 class="text-center m-0"><%= @order.lecture.title %></h6>
            <p class="text-center m-0"><%= @order.lecture.description %></p>
            <h5 class="mt-2">R$ <%= @order.lecture.price %></h5>
            <h6><%= link_to "Watch Your Video", @order.lecture.youtube_url, target: "_blank"%></h6>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= link_to lectures_path do %>
    <i class="fas fa-angle-double-left mb-5"></i>
    <% end %>
</div>
