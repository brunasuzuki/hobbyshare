<div class="container">
  <div class="card mx-auto col-6 mt-5">
    <div class="card-body">
      <h2><%= @lecture.title %></h2>
      <h4>R$ <%= @lecture.price %></h4>
      <div class="d-flex w-100 ms-5">
          <%= link_to lecture_path(@lecture) do %>
            <i class="fas fa-angle-double-left"></i>
        <% end %>
        <div class="button-order">
          <%= link_to "Confirm purchase", lecture_orders_path(@lecture), method: :post, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>
